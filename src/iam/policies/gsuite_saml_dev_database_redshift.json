{
  "Version": "2012-10-17",
  "Statement": [
   {
      "Effect": "Allow",
      "Action": [
        "redshift:DeleteClusterSecurityGroup",
        "redshift:CreateTags",
        "redshift:DeleteClusterSubnetGroup",
        "redshift:CreateClusterSecurityGroup",
        "redshift:ModifyClusterIamRoles",
        "redshift:ModifySnapshotSchedule",
        "redshift:DeleteSnapshotSchedule",
        "redshift:PauseCluster",
        "redshift:RestoreTableFromClusterSnapshot",
        "redshift:DeleteClusterSnapshot",
        "redshift:BatchModifyClusterSnapshots",
        "redshift:DeleteClusterParameterGroup",
        "redshift:CreateHsmClientCertificate",
        "redshift:ResizeCluster",
        "redshift:RevokeSnapshotAccess",
        "redshift:ResumeCluster",
        "redshift:RevokeClusterSecurityGroupIngress",
        "redshift:CreateEventSubscription",
        "redshift:ModifyClusterDbRevision",
        "redshift:EnableLogging",
        "redshift:DeleteSnapshotCopyGrant",
        "redshift:DeleteHsmConfiguration",
        "redshift:CopyClusterSnapshot",
        "redshift:ModifyClusterParameterGroup",
        "redshift:GetClusterCredentials",
        "redshift:ModifyClusterSnapshot",
        "redshift:CreateHsmConfiguration",
        "redshift:JoinGroup",
        "redshift:ModifyCluster",
        "redshift:AuthorizeClusterSecurityGroupIngress",
        "redshift:DeleteCluster",
        "redshift:CreateSnapshotSchedule",
        "redshift:ResetClusterParameterGroup",
        "redshift:ModifySnapshotCopyRetentionPeriod",
        "redshift:ModifyClusterSnapshotSchedule",
        "redshift:CreateClusterSnapshot",
        "redshift:DisableSnapshotCopy",
        "redshift:ModifyEventSubscription",
        "redshift:CreateClusterUser",
        "redshift:DeleteTags",
        "redshift:DeleteHsmClientCertificate",
        "redshift:RotateEncryptionKey",
        "redshift:ModifyClusterSubnetGroup",
        "redshift:CancelResize",
        "redshift:DisableLogging",
        "redshift:AuthorizeSnapshotAccess",
        "redshift:RebootCluster",
        "redshift:RestoreFromClusterSnapshot",
        "redshift:BatchDeleteClusterSnapshots",
        "redshift:CreateCluster",
        "redshift:CreateClusterParameterGroup",
        "redshift:EnableSnapshotCopy",
        "redshift:CreateClusterSubnetGroup",
        "redshift:DeleteEventSubscription",
        "redshift:CreateSnapshotCopyGrant"
      ],
      "Resource": [
        "arn:aws:redshift:ap-south-1:${account_id}:securitygroupingress:*/cidrip/*",
        "arn:aws:redshift:ap-south-1:${account_id}:snapshotschedule:*",
        "arn:aws:redshift:ap-south-1:${account_id}:dbname:*/*",
        "arn:aws:redshift:ap-south-1:${account_id}:dbgroup:*/*",
        "arn:aws:redshift:ap-south-1:${account_id}:hsmconfiguration:*",
        "arn:aws:redshift:ap-south-1:${account_id}:snapshotcopygrant:*",
        "arn:aws:redshift:ap-south-1:${account_id}:eventsubscription:*",
        "arn:aws:redshift:ap-south-1:${account_id}:cluster:*",
        "arn:aws:redshift:ap-south-1:${account_id}:securitygroup:*/ec2securitygroup/*/*",
        "arn:aws:redshift:ap-south-1:${account_id}:hsmclientcertificate:*",
        "arn:aws:redshift:ap-south-1:${account_id}:dbuser:*/*",
        "arn:aws:redshift:ap-south-1:${account_id}:parametergroup:*",
        "arn:aws:redshift:ap-south-1:${account_id}:subnetgroup:*",
        "arn:aws:redshift:ap-south-1:${account_id}:securitygroupingress:*/ec2securitygroup/*/*",
        "arn:aws:redshift:ap-south-1:${account_id}:snapshot:*/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "redshift:ModifyScheduledAction",
        "redshift:ModifySavedQuery",
        "redshift:CreateSavedQuery",
        "redshift:CancelQuerySession",
        "redshift:AcceptReservedNodeExchange",
        "redshift:ExecuteQuery",
        "redshift:ModifyClusterMaintenance",
        "redshift:CreateScheduledAction",
        "redshift:DeleteScheduledAction",
        "redshift:DeleteSavedQueries",
        "redshift:CancelQuery"
      ],
      "Resource": "*"
    }
  ]
}