{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "iam:PassRole",
        "iam:DeactivateMFADevice",
        "iam:DeleteAccessKey",
        "iam:DeleteVirtualMFADevice",
        "iam:EnableMFADevice",
        "iam:ResyncMFADevice",
        "iam:UpdateAccessKey",
        "iam:CreateVirtualMFADevice",
        "iam:CreateAccessKey"
      ],
      "Resource": [
        "arn:aws:iam::${account_id}:mfa/$${aws:username}",
        "arn:aws:iam::${account_id}:user/$${aws:username}",
        "arn:aws:iam::${account_id}:sms-mfa/$${aws:username}"
      ]
    }
  ]
}