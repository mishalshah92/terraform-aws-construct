{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ec2:AttachVolume",
        "ec2:CopySnapshot",
        "ec2:CreatePlacementGroup",
        "ec2:ModifySnapshotAttribute",
        "ec2:StartInstances",
        "ec2:RevokeSecurityGroupEgress",
        "ec2:DetachVolume",
        "ec2:RebootInstances",
        "ec2:CreateTags",
        "ec2:StopInstances",
        "ec2:CreateLaunchTemplateVersion",
        "ec2:RevokeSecurityGroupIngress",
        "ec2:ModifyLaunchTemplate",
        "ec2:AssociateIamInstanceProfile",
        "ec2:DisassociateIamInstanceProfile",
        "ec2:ReplaceIamInstanceProfileAssociation"
      ],
      "Resource": [
        "arn:aws:ec2:ap-south-1:${account_id}:vpc-endpoint-service/*",
        "arn:aws:ec2:ap-south-1::image/*",
        "arn:aws:ec2:ap-south-1:${account_id}:transit-gateway-route-table/*",
        "arn:aws:ec2:ap-south-1:${account_id}:local-gateway/*",
        "arn:aws:ec2:ap-south-1:${account_id}:export-instance-task/*",
        "arn:aws:ec2:ap-south-1:${account_id}:traffic-mirror-session/*",
        "arn:aws:ec2:ap-south-1:${account_id}:transit-gateway/*",
        "arn:aws:ec2:ap-south-1::snapshot/*",
        "arn:aws:ec2:ap-south-1:${account_id}:vpn-gateway/*",
        "arn:aws:elastic-inference:ap-south-1:${account_id}:elastic-inference-accelerator/*",
        "arn:aws:ec2:ap-south-1:${account_id}:egress-only-internet-gateway/*",
        "arn:aws:ec2:ap-south-1:${account_id}:capacity-reservation/*",
        "arn:aws:ec2:ap-south-1:${account_id}:client-vpn-endpoint/*",
        "arn:aws:ec2:ap-south-1:${account_id}:reserved-instances/*",
        "arn:aws:ec2:ap-south-1:${account_id}:traffic-mirror-target/*",
        "arn:aws:ec2:ap-south-1:${account_id}:transit-gateway-attachment/*",
        "arn:aws:ec2:ap-south-1:${account_id}:placement-group/*",
        "arn:aws:ec2:ap-south-1:${account_id}:dedicated-host/*",
        "arn:aws:ec2:ap-south-1:${account_id}:volume/*",
        "arn:aws:ec2:ap-south-1:${account_id}:local-gateway-route-table/*",
        "arn:aws:ec2:ap-south-1:${account_id}:network-acl/*",
        "arn:aws:ec2:ap-south-1:${account_id}:vpc-endpoint/*",
        "arn:aws:ec2:ap-south-1:${account_id}:dhcp-options/*",
        "arn:aws:ec2:ap-south-1:${account_id}:local-gateway-virtual-interface-group/*",
        "arn:aws:ec2:ap-south-1:${account_id}:spot-instances-request/*",
        "arn:aws:ec2:ap-south-1:${account_id}:vpn-connection/*",
        "arn:aws:ec2:ap-south-1:${account_id}:vpc-flow-log/*",
        "arn:aws:ec2:ap-south-1:${account_id}:transit-gateway-multicast-domain/*",
        "arn:aws:ec2:ap-south-1:${account_id}:security-group/*",
        "arn:aws:ec2:ap-south-1:${account_id}:key-pair/*",
        "arn:aws:ec2:ap-south-1:${account_id}:natgateway/*",
        "arn:aws:ec2:ap-south-1:${account_id}:network-interface/*",
        "arn:aws:ec2:ap-south-1:${account_id}:internet-gateway/*",
        "arn:aws:ec2:ap-south-1:${account_id}:local-gateway-route-table-virtual-interface-group-association/*",
        "arn:aws:ec2:ap-south-1:${account_id}:subnet/*",
        "arn:aws:ec2:ap-south-1:${account_id}:instance/*",
        "arn:aws:ec2:ap-south-1:${account_id}:route-table/*",
        "arn:aws:ec2:ap-south-1:${account_id}:local-gateway-virtual-interface/*",
        "arn:aws:ec2:ap-south-1:${account_id}:fleet/*",
        "arn:aws:ec2:ap-south-1::fpga-image/*",
        "arn:aws:ec2:ap-south-1:${account_id}:local-gateway-route-table-vpc-association/*",
        "arn:aws:ec2:ap-south-1:${account_id}:vpc/*",
        "arn:aws:ec2:ap-south-1:${account_id}:traffic-mirror-filter/*",
        "arn:aws:ec2:ap-south-1:${account_id}:elastic-gpu/*",
        "arn:aws:ec2:ap-south-1:${account_id}:launch-template/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeIamInstanceProfileAssociations",
        "ec2:EnableEbsEncryptionByDefault",
        "ec2:RunScheduledInstances",
        "ec2:ResetEbsDefaultKmsKeyId",
        "ec2:ModifyImageAttribute",
        "ec2:ReleaseHosts",
        "ec2:ModifyInstanceAttribute"
      ],
      "Resource": "*"
    }
  ]
}